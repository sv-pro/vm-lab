#cloud-config
autoinstall:
  version: 1
  locale: en_US.UTF-8
  keyboard:
    layout: us
  network:
    network:
      version: 2
      ethernets:
        eth0:
          dhcp4: yes
  storage:
    layout:
      name: direct
  identity:
    hostname: ubuntu
    username: ubuntu
    password: 'ubuntu'
  ssh:
    install-server: yes
    allow-pw: yes
  packages:
    - openssh-server
  late-commands:
    - echo 'ubuntu:ubuntu' | chpasswd
    - systemctl enable ssh
    - systemctl start ssh